@model HomepageVM

<!-- Home slider -->
<section class="p-0">
	<div class="slide-1 home-slider">
	@foreach (var slider in Model.Sliders)
	{
		<div class="home text-center">
			<img src="@slider.ImageName" alt="" class="bg-img blur-up lazyload">
		</div>
	}
	</div>
</section>
<!-- Home slider end -->
<partial name="partials/TopCollectionPartial.cshtml" model="@Model.TopCollections" />
<!-- Parallax banner -->
<section class="p-0">
	<div class="full-banner parallax text-center p-left">
		<img src="~/customer/assets/images/parallax/1.jpg" alt="" class="bg-img blur-up lazyload">
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="banner-contain">
						<h2>2018</h2>
						<h3>fashion trends</h3>
						<h4>special offer</h4>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Parallax banner end -->
<partial name="partials/SpecialProductsPartial.cshtml" model="@Model" />