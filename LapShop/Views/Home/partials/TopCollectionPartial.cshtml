@model List<Item>
<!-- Paragraph-->
<div class="title1 section-t-space">
	<h4>special offer</h4>
	<h2 class="title-inner1">top collection</h2>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-6 offset-lg-3">
			<div class="product-para">
				<p class="text-center">
					Lorem Ipsum is simply dummy text of the printing and typesetting industry.
					Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,
				</p>
			</div>
		</div>
	</div>
</div>
<!-- Paragraph end -->
<!-- Product slider -->
<section class="section-b-space p-t-0 ratio_asos">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="product-4 product-m no-arrow">
					@foreach (var item in Model)
					{
						<div class="product-box">
							<div class="img-wrapper">
								<div class="front">
									<a asp-controller="Item" asp-action="Item" asp-route-id="@item.ItemId">
										<img src="@item.ImageName"
											 class="img-fluid blur-up lazyload bg-img" alt="no image">
									</a>
								</div>
								<div class="back">
									<a asp-controller="Item" asp-action="Item" asp-route-id="@item.ItemId">
										<img src="@item.ImageName"
											 class="img-fluid blur-up lazyload bg-img" alt="no image">
									</a>
								</div>
								<div class="cart-info cart-wrap">
									<button data-toggle="modal" data-target="#addtocart"
											title="Add to cart">
										<i class="ti-shopping-cart"></i>
									</button> <a href="javascript:void(0)" title="Add to Wishlist">
										<i class="ti-heart" aria-hidden="true"></i>
									</a> <a href="#"
									data-toggle="modal" data-target="#quick-view" title="Quick View">
										<i class="ti-search" aria-hidden="true"></i>
									</a> <a href="compare.html" title="Compare">
										<i class="ti-reload"
										   aria-hidden="true"></i>
									</a>
								</div>
							</div>
							<div class="product-detail">
								<div class="rating">
									<i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i>
								</div>
								<a href="product-page(no-sidebar).html">
									<h6>@item.ItemName</h6>
								</a>
								<h4>EGP @item.SalesPrice</h4>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Product slider end -->