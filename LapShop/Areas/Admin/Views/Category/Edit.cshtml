@model Category

<div class="container-fluid page-body-wrapper">
	<div class="main-panel">
		<div class="content-wrapper">
			<div class="page-header">
				<h3>Categories</h3>
			</div>
			<div class="row">
				<div class="col-6 grid-margin stretch-card">
					<div class="card">
						<div class="card-body">
							<form class="forms-sample" method="post" asp-area="Admin" asp-controller="Category" asp-action="Save" role="form" enctype="multipart/form-data">
								<input type="hidden" asp-for="@Model.CategoryId" />
								<input type="hidden" asp-for="@Model.CategoryBy" />
								<input type="hidden" asp-for="@Model.CreatedDate" />
								<input type="hidden" asp-for="@Model.ImageName" />

								<div class="form-group">
									<label asp-for="CategoryName">Name</label>
									<input asp-for="CategoryName" type="text" class="form-control" placeholder="Category Name">
									<span asp-validation-for="CategoryName"></span>
								</div>

								<div class="form-group">
									<label asp-for="@Model.ShowInHomePage"> Show in home page </label>
									<input asp-for="@Model.ShowInHomePage" checked="@Model.ShowInHomePage" />
								</div>

								@* <div class="form-group"> *@
								@* 	<label>File upload</label> *@
								@* 	<input type="file" name="img[]" class="file-upload-default"> *@
								@* 	<div class="input-group col-xs-12"> *@
								@* 		<input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image" asp-for="@Model.ImageName"> *@
								@* 		<span class="input-group-append"> *@
								@* 			<button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button> *@
								@* 		</span> *@
								@* 	</div> *@
								@* </div> *@
								<button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
								<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-light">Cancel</a>
							</form>
						</div>
					</div>
				</div>

				<div class="col-6 grid-margin stretch-card">
					<div class="card">
						<div class="card-body">
							<img src="@Model.ImageName" style="width: 300px; border: 2px solid red;" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts
{
	<script src="~/admin/assets/js/file-upload.js"></script>
}