@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>

@if(Model?.Count > 0)
{
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Username</th>
				<th>Email</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.UserName</td>
					<td>@user.Email</td>
					<td>
						<a asp-area="Admin" asp-controller="Permissions" asp-action="UserDetails" asp-route-userId="@user.Id" class="btn btn-primary">Edit Roles</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>No users found.</p>
}
)